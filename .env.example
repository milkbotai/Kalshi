# Trading Mode (SHADOW/DEMO/LIVE)
TRADING_MODE=LIVE

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=milkbot
POSTGRES_USER=milkbot
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD

# Alternative: Full database URL (if using DATABASE_URL instead)
# DATABASE_URL=postgresql://milkbot:password@localhost:5432/milkbot

# Kalshi API (RSA Key Authentication)
KALSHI_API_URL=https://trading-api.kalshi.com/trade-api/v2
KALSHI_API_KEY_ID=
KALSHI_PRIVATE_KEY_PATH=

# NWS API
NWS_API_BASE=https://api.weather.gov
NWS_USER_AGENT=Milkbot/1.0 (contact@milkbot.ai)

# OpenRouter LLM (Optional)
OPENROUTER_API_KEY=
OPENROUTER_API_BASE=https://openrouter.ai/api/v1
OPENROUTER_MODEL_FAST=anthropic/claude-3-haiku
OPENROUTER_MODEL_DEEP=anthropic/claude-sonnet-4.5

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Risk Limits (Live Bankroll: $992.10)
BANKROLL=992.10
MAX_OPEN_RISK_PCT=0.10
MAX_DAILY_LOSS_PCT=0.05
MAX_WEEKLY_LOSS_PCT=0.12
MAX_MONTHLY_LOSS_PCT=0.20
MAX_TRADE_RISK_PCT=0.02
MAX_CITY_EXPOSURE_PCT=0.03
MAX_CLUSTER_EXPOSURE_PCT=0.05

# Execution Gates
SPREAD_MAX_CENTS=4
LIQUIDITY_MIN=500
MIN_EDGE_AFTER_COSTS=0.03

# Trading
ENABLE_TRADING=True
MAX_POSITION_SIZE=200

# Timing
PUBLIC_TRADE_DELAY_MIN=60
DASH_REFRESH_SEC=5
WEATHER_CACHE_MIN=5
REPRICER_INTERVAL_SEC=120

# Dashboard
DASHBOARD_HOST=127.0.0.1
DASHBOARD_PORT=8501

# Analytics API
ANALYTICS_HOST=127.0.0.1
ANALYTICS_PORT=8000

# Backup Configuration (Optional)
REMOTE_BACKUP_ENABLED=false
REMOTE_BACKUP_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
